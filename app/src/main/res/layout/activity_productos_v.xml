            android:textSize="21sp"/>

        <TextView
            android:id="@+id/textViewC1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S/.99.99"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textViewC2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
